        </ul>
      </section>
      <section class="footer__block">
        <h3 class="footer__title">{{ titles.contactos }}</h3>
        <ul class="footer__list">
          <li class="footer__item">
            <a class="footer__link --phone"
               href="tel:{{ contacts.phone | replace(" ", "") | replace("-", "") | replace("(", "") | replace(")", "") | replace("+", "")| urlencode }}">
              {{ contacts.phone }}
            </a>
          </li>
          <li class="footer__item">

            <a class="footer__link --phone --whatsapp"
               href="tel:{{ contacts.whatsapp | replace(" ", "") | replace("-", "") | replace("(", "") | replace(")", "") | replace("+", "")| urlencode }}">
              {{ contacts.whatsapp }}
            </a>
          </li>
          <li class="footer__item">

            <a class="footer__link --email" href="mailto:{{ contacts.email | trim }}">
              {{ contacts.email }}
            </a>
          </li>
        </ul>
      </section>
      <section class="footer__block">
        <h3 class="footer__title">{{ titles.footermenu }}</h3>

        {% set navPages = collections.all | eleventyNavigation %}
        {% macro renderNavListItem(entry) -%}
          <li class="footer__item --nav-item">
            <a class="footer__link{% if entry.url == page.url %} --active{% endif %}" href="{{ entry.url | url }}">{{ entry.title }}</a>
            {%- if entry.children.length -%}
              <ul class="footer__list --sub-nav">
                {%- for child in entry.children %}{{ renderNavListItem(child) }}{% endfor -%}
              </ul>
            {%- endif -%}
          </li>
        {%- endmacro %}

        <ul class="footer__list --nav">
          {%- for entry in navPages %}{{ renderNavListItem(entry) }}{%- endfor -%}
        </ul>
      </section>
  </div>
  <div class="footer__bottom">
    <div class="container">
      <a href="{{ '/' | url }}" class="footer__copyright">{{ metadata.title }} &copy;{{ build.timestamp }}</a>
      <a href="https://elkin.dev" class="footer__development" target="_blank" rel="noopener">developed by Elkin.dev</a>
    </div>
  </div>
</footer>
