
<ol reversed class="prodlist" >
{% for product in prodlist | reverse %}

{#  {% set isPalets = collections.palets | getCollectionItem(product) %}#}
{#  {% set isMadera = collections.madera | getCollectionItem(product) %}#}

  <li class="prodlist__item">
{#    {% if isPalets %} I am Palets {% endif %}#}
{#    {% if isMadera %} I am Madera {% endif %}#}
    <a href="{{ product.url | url }}" class="prodlist__link">
      {% image product.data.img , "photo of my cat", "300px"  %}
    </a>
    <h3 class="prodlist__title">{{ product.data.title }}</h3>
    {% if product.data.height %}
    <p class="prodlist__attribute">{{ product.data.width }}x{{ product.data.height }}</p>
    {% endif %}
    {% if product.data.thickness %}
      <p class="prodlist__attribute">{{ product.data.wood }}</p>
    {% endif %}
    <ul class="prodlist__tagslist tags">
      {% for tag in product.data.tags %}
        {%- if collections.tagList.indexOf(tag) != -1 -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <li class="tags__item">
            <a href="{{ tagUrl | url }}" class="tags__link {{ tag }}">{{ tag }}</a>
          </li>
        {%- endif -%}
      {% endfor %}
    </ul>
    <p class="prodlist__text">{{ product.data.description }}</p>

    <a href="{{ product.url | url }}" class="prodlist__button button">Ver mas</a>

  </li>
{% endfor %}
</ol>

